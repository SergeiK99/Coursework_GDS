@model Coursework_Models.Product
@using Coursework_Utility



<form method="post" >
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="mb-3 row">
            <h2 class="text-info pl-3">
                Удаление товара
            </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Name">Название</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />     
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Price">Цена</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="Description">Описание</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="CategoryId">Категория</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label asp-for="ManufacturerId">Производитель</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Manufacturer.Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="mb-3 row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            
                                <button type="submit" class="btn btn-danger w-100">Удалить</button>
                            
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary"> <i class="fa-solid fa-right-from-bracket"></i> Обратно </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.Id != 0)
                {
                    <img src="@WebConstants.ImagePath@Model.Image" width="350" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>
        </div>

    </div>


</form>

<!-- Валидация на стороне клиента -->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250
                disable: true
            });
        });
        
    </script>
}

